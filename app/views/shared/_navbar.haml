  .container-fluid
    %ul.nav.navbar-nav.navbar-left
      %li= link_to 'Kickoff', '#', class: 'navbar-brand'
    %ul.nav.navbar-nav.navbar-right
      - if admin?
        %li.dropdown
          %a.dropdown-toggle{data: { toggle: 'dropdown' }, aria: { haspopup: true, expanded: false }, href: '#', role: 'button' }
            Admin
            %span.caret
          %ul.dropdown-menu
            %li= link_to 'Users', admin_users_path
            %li= link_to 'Projects', admin_projects_path
      %li= link_to 'My Projects', projects_path
      %li= link_to "Hello, #{current_user.email}", edit_user_registration_path
      %li= link_to 'Sign out', destroy_user_session_path, method: :delete
